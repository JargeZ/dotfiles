#!/bin/bash

if [[ ! -d /mnt/drive/Backups ]]; then
    echo "Please mount your usb drive"
    exit
fi

ignore=( '.rustup' '.cache' '.mozilla' '.pki' '.zoom' '.cargo' '.config/dotfiles' )

cd "$HOME" && tar -zcvf /mnt/drive/Backups/home_"$(date +"%d_%m_%Y")".tar.gz --exclude-vcs "${ignore[@]/#/--exclude=}" .
